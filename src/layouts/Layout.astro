---
import SideNav from "../components/SideNav.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>Class Site</title>

    <style></style>
    <style is:global>
      @import url("https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;1,100;1,200;1,300;1,400;1,500;1,600;1,700&family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&family=Newsreader:ital,opsz,wght@0,6..72,200..800;1,6..72,200..800&display=swap");

      :root {
        --color-bg: #14141a;
        --color-text: #ffffff;
        --color-primary: #ffff27;
        --color-secondary: #54ff29;

        --font-primary: "Inter", sans-serif;
        --font-secondary: "Newsreader", serif;
        --font-code: "IBM Plex Mono", monospace;
      }
      body {
        font-family: var(--font-primary);
        background-color: var(--color-bg);
        color: var(--color-text);
      }
      a {
        color: var(--color-primary);
        text-decoration: none;
      }

      h1,
      h2,
      h3,
      h4,
      h5,
      h6 {
        font-family: var(--font-secondary);
        font-weight: 500;
      }
      code {
        font-family: var(--font-code);
      }
    </style></head
  >

  <body>
    <SideNav />
    <slot />
  </body>
</html>
